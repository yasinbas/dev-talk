generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  DEVELOPER
}

enum LobbyStatus {
  WAITING
  LIVE
  ENDED
}

enum ParticipantRole {
  HOST
  SPEAKER
  LISTENER
}

enum PointActionType {
  ARTICLE_READ
  ARTICLE_PUBLISHED
  PODCAST_PUBLISHED
  MEME_PUBLISHED
  LOBBY_HOSTED
  DECAY
}

model User {
  id          String   @id @default(cuid())
  clerkId     String   @unique
  email       String   @unique
  firstName   String?
  lastName    String?
  imageUrl    String?
  bio         String?
  
  role        Role     @default(DEVELOPER)
  techStack   Json?
  points      Int      @default(0)
  lastLoginAt DateTime @default(now())

  // Relations
  lobbiesHosted      Lobby[]
  lobbyParticipation LobbyParticipant[]
  podcasts           Podcast[]
  memes              Meme[]
  eventsOrganized    Event[]
  articles           Article[]
  articleReads       ArticleRead[]
  likes              ArticleLike[]
  pointActions       PointAction[]


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clerkId])
  @@index([email])
}

model Lobby {
  id        String   @id @default(cuid())
  title     String
  topic     String
  status    LobbyStatus @default(WAITING)
  
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  
  participants LobbyParticipant[]
  
  maxParticipants Int @default(10)
  
  startedAt DateTime?
  endedAt   DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([topic])
}

model LobbyParticipant {
  lobbyId   String
  lobby     Lobby    @relation(fields: [lobbyId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  role      ParticipantRole @default(LISTENER)
  joinedAt  DateTime @default(now())

  @@id([lobbyId, userId])
}

model Meme {
  id        String   @id @default(cuid())
  caption   String
  imageUrl  String
  likes     Int      @default(0)
  
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@index([createdAt])
}

model Podcast {
  id          String   @id @default(cuid())
  title       String
  description String?
  audioUrl    String
  duration    Int?
  
  hostId      String
  host        User     @relation(fields: [hostId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
}

model Event {
  id           String   @id @default(cuid())
  title        String
  description  String?
  scheduledFor DateTime
  
  organizerId  String
  organizer    User     @relation(fields: [organizerId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime @default(now())
  
  @@index([scheduledFor])
}

model Article {
  id        String   @id @default(cuid())
  title     String
  content   String
  summary   String?
  
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  readCount Int      @default(0)
  readers      ArticleRead[]
  likesCount   Int           @default(0)
  likes        ArticleLike[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
}

model ArticleRead {
  id        String   @id @default(cuid())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  
  readAt    DateTime @default(now())

  @@unique([userId, articleId])
}

model ArticleLike {
  id        String   @id @default(cuid())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@unique([userId, articleId])
}

model PointAction {
  id        String   @id @default(cuid())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  action    PointActionType
  points    Int
  metadata  Json?
  
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}
